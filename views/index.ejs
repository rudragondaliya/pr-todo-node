<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Employee Management System</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="./style.css">
</head>

<body>

  <main>
  
<!-- banner -->
  <%- include('navbar') %>
 <div class="container-fluid p-4">
  <div class="row">
    <div class="col">
      <div class="welcome-box d-flex align-items-center justify-content-center flex-column">
        <h1 class="text-center text-white fw-bold mb-3 display-3">Empower Your Workforce</h1>
        <h5 class="text-center text-white  ">Streamline HR operations with our intuitive employee management <br> platform</h5>

        <div class="box-btn d-flex align-items-center mt-3">
          <button class="btn btn-light mx-3"> <a class="nav-link" href="/form"><i class="bi bi-person-fill-add me-2" style="color: #938dea;"></i>Add Employee</a></button>
          <button class="btn btn-light"> <a class="nav-link" href="/table"><i class="bi bi-table me-2" style="color: #938dea;"></i>View All</a></button>
        </div>
      </div>
    </div>
  </div>
 </div>

 <!-- summary-cards -->

 <div class="container-fluid  p-5">
  <div class="row">
    <div class="col-3">
      <div class="box-1 shadow">
        <div class="box-icon-1">
          <i class="bi bi-people-fill fs-1"></i>
        </div>
          <div class="box-title">
            <h5 class="mb-4 ms-3">Total Employees</h5>
            <h6 class="mb-3 ms-5 fs-4"><%= employee.length %></h6>
          </div>
      </div>
    </div>
    <div class="col-3">
      <div class="box-2 shadow">
        <div class="box-icon-2 ">
          <i class="bi bi-person-workspace fs-1"></i>
        </div>
            <div class="box-title">
              <h5 class="mb-4 ms-3">Active Employees</h5>
             <h6 class="mb-3 ms-4"><%= employee.filter(emp=> emp.status === 'Active').length %></h6>
            </div>
      </div>
    </div>
    <div class="col-3">
      <div class="box-3 shadow">
        <div class="box-icon-3">
          <i class="bi bi-person-fill-x fs-1"></i>
        </div>
            <div class="box-title">
              <h5 class="mb-4 ms-3">On Leave Employees</h5>
              <h6 class="mb-3 ms-5"><%= employee.filter(emp => emp.status === 'On Leave' || emp.status === 'Inactive').length %></h6>
            </div>       
      </div>
    </div>
    <div class="col-3">
      <div class="box-4 shadow">
        <div class="box-icon-4">
          <i class="bi bi-person-video3 fs-1"></i>
        </div>
           <div class="box-title">
            <h5 class="mb-4 ms-3"> Total Department</h5>
            <h6 class="mb-3 ms-5"> <%= [...new Set(employee.map(emp => emp.department))].length %></h6>
           </div>
      </div>
    </div>
  </div>
 </div>


  <div class="container">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-primary">Assigned Tasks</h2>
    <a href="/taskForm" class="btn btn-primary">
      <i class="bi bi-plus-circle me-2"></i>Assign Task
    </a>
  </div>

  <% if (tasks.length === 0) { %>
    <div class="alert alert-info text-center shadow-sm">
      <i class="bi bi-info-circle me-2"></i>No tasks assigned yet.
    </div>
  <% } else { %>
    <div class="row g-4">
      <% tasks.forEach(task => { %>
        <div class="col-md-4">
          <div class="card task-card border-0 shadow-sm h-100 hover-shadow" style="transition: 0.3s;">
            <div class="card-body p-4">
              <div class="d-flex justify-content-between align-items-start mb-3">
                <h5 class="card-title fw-bold text-truncate"><%= task.title %></h5>
                <span class="badge rounded-pill px-3 py-2
                  <%= task.priority === 'High' ? 'bg-danger' : 
                      task.priority === 'Medium' ? 'bg-warning text-dark' : 'bg-secondary' %>">
                  <%= task.priority %>
                </span>
              </div>
              <p class="card-text text-muted mb-3" style="min-height: 60px;">
                <%= task.description || 'No description provided' %>
              </p>
              <ul class="list-unstyled small mb-4">
                <li class="mb-2"><i class="bi bi-person-fill me-2 text-primary"></i>
                  <strong>Employee:</strong> 
                   <% const emp = employee.find(e => e.id == task.employeeId); %>
                  <%= emp ? emp.username : 'No Employee Found' %>

                </li>
                <li class="mb-2"><i class="bi bi-calendar-event me-2 text-primary"></i>
                  <strong>Due Date:</strong> <%= task.dueDate || 'No due date' %>
                </li>
                <li><i class="bi bi-person-badge-fill me-2 text-primary"></i>
                  <strong>Assigned By:</strong> <%= task.assignedBy || 'Manager' %>
                </li>
              </ul>
              <div class="d-flex justify-content-end">
                <a href="/tasks/edit/<%= task.id %>" class="btn btn-outline-primary btn-sm me-2">
                  <i class="bi bi-pencil"></i>
                </a>
                <form action="/tasks/delete/<%= task.id %>" method="POST" class="d-inline">
                  <button type="submit" class="btn btn-outline-danger btn-sm">
                    <i class="bi bi-trash"></i>
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>



  </main>
  

</body>
</html>